<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_edit_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8DB"
    android:gravity="left|top"
    android:orientation="vertical">
    
    <!-- Header -->
    <FrameLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="left"
        android:background="#F5EAB5">
        
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="53dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />
        
        <TextView
            android:id="@+id/text_edit_user_info"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="54.5dp"
            android:layout_marginBottom="-2.5dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Sửa thông tin cá nhân"
            android:textColor="#FF755200"
            android:textSize="16dp"
            android:fontFamily="@font/nunito_bold" />
    </FrameLayout>
    
    <!-- Avatar -->
    <FrameLayout
        android:id="@+id/container_frame5"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="23dp">
        
        <com.nhom5.shelhive.customviews.HexagonImageView
            android:id="@+id/avatar_hexagon"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_gravity="top|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />
        
        <FrameLayout
            android:id="@+id/container_frame6"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="193dp"
            android:layout_marginTop="66dp"
            android:layout_gravity="top|left"
            android:background="@drawable/circle_yellow">
            
            <ImageView
                android:id="@+id/image_pen_bold"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit" />
        </FrameLayout>
    </FrameLayout>
    
    <!-- Thông tin người dùng -->
    <LinearLayout
        android:id="@+id/container_frame7"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="23dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/container_frame8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Họ tên -->
            <FrameLayout
                android:id="@+id/container_group2"
                android:layout_width="340dp"
                android:layout_height="25.35dp">
                
                <EditText
                    android:id="@+id/edit_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Ngô Nhựt Trường"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:hint="Họ tên" />
                
                <View
                    android:id="@+id/line"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/image_person_outline1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_person"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- Ngày sinh -->
            <FrameLayout
                android:id="@+id/container_group3"
                android:layout_width="340dp"
                android:layout_height="24.77dp"
                android:layout_marginTop="30dp">
                
                <EditText
                    android:id="@+id/edit_dob"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="1.42dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="14/06/2004"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@null"
                    android:inputType="date"
                    android:hint="Ngày sinh" />
                
                <View
                    android:id="@+id/line1"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23.42dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/image_calendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- Tỉnh/Thành phố -->
            <FrameLayout
                android:id="@+id/container_group4"
                android:layout_width="340dp"
                android:layout_height="24.12dp"
                android:layout_marginTop="30dp">
                
                <EditText
                    android:id="@+id/edit_que_quan"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="0.76dp"
                    android:layout_gravity="top|left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Bình Dương"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@null"
                    android:inputType="text"
                    android:hint="Quê quán" />
                
                <View
                    android:id="@+id/line2"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="22.76dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/image_house_outline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_home"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- Địa chỉ -->
            <FrameLayout
                android:id="@+id/container_group5"
                android:layout_width="340dp"
                android:layout_height="23.35dp"
                android:layout_marginTop="30dp">
                
                <EditText
                    android:id="@+id/edit_dia_chi"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_gravity="top|left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Bình Dương"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@null"
                    android:inputType="textPostalAddress"
                    android:hint="Địa chỉ" />
                
                <View
                    android:id="@+id/line3"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="0.74dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_location"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- CCCD -->
            <FrameLayout
                android:id="@+id/container_group6"
                android:layout_width="340dp"
                android:layout_height="23.35dp"
                android:layout_marginTop="30dp">
                
                <EditText
                    android:id="@+id/edit_cccd"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_gravity="top|left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="123456789012"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="CCCD" />
                
                <View
                    android:id="@+id/line4"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/image_card_outline"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0.75dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_id_card"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- Email -->
            <FrameLayout
                android:id="@+id/container_group7"
                android:layout_width="340dp"
                android:layout_height="24.35dp"
                android:layout_marginTop="30dp">
                
                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="top|left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="22521577@gm.uit.edu.vn"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:hint="Email" />
                
                <View
                    android:id="@+id/line5"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/image_mail_outline"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_email"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- SĐT -->
            <FrameLayout
                android:id="@+id/container_group8"
                android:layout_width="340dp"
                android:layout_height="24.12dp"
                android:layout_marginTop="30dp">
                
                <EditText
                    android:id="@+id/edit_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="0.76dp"
                    android:layout_gravity="top|left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="0123456789"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:background="@null"
                    android:inputType="phone"
                    android:hint="Số điện thoại" />
                
                <View
                    android:id="@+id/line6"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="22.76dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/image_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/brown" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
        
    <LinearLayout
        android:id="@+id/container_frame9"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <!-- Nút hủy -->
        <FrameLayout
            android:id="@+id/btn_cancel"
            android:layout_width="106dp"
            android:layout_height="48dp">
            
            <!-- Bóng dưới nút -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_rect_shadow" />
            
            <!-- Nút chính -->
            <View
                android:layout_width="match_parent" 
                android:layout_height="46dp"
                android:background="@drawable/rounded_rect_button_huy" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Hủy"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                android:fontFamily="@font/nunito_bold" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />
        
        <!-- Nút lưu -->
        <FrameLayout
            android:id="@+id/btn_save_user"
            android:layout_width="106dp"
            android:layout_height="48dp">
            
            <!-- Bóng dưới nút -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_rect_shadow" />
            
            <!-- Nút chính -->
            <View
                android:layout_width="match_parent" 
                android:layout_height="46dp"
                android:background="@drawable/rounded_rect_button" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Lưu"
                android:textColor="#FF755200"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_bold" />
        </FrameLayout>
    </LinearLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <!-- Bottom Navigation -->
    <FrameLayout
        android:id="@+id/container_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <androidx.cardview.widget.CardView
            android:layout_width="321dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:background="@android:color/white">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <!-- Trang chủ -->
                <LinearLayout
                    android:id="@+id/nav_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/image_home"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_home"
                        app:tint="#B7B7B7" />
                    
                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Trang chủ"
                        android:textColor="#B7B7B7"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
                
                <!-- Tôi -->
                <LinearLayout
                    android:id="@+id/nav_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <View
                        android:layout_width="27dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#FFB300" />
                    
                    <ImageView
                        android:id="@+id/image_person_outline"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_person"
                        app:tint="#FFB300" />
                    
                    <TextView
                        android:id="@+id/text_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tôi"
                        android:textColor="#FFB300"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_bold" />
                </LinearLayout>
                
                <!-- Đăng xuất -->
                <LinearLayout
                    android:id="@+id/nav_logout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/image_logout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_logout"
                        app:tint="#B7B7B7" />
                    
                    <TextView
                        android:id="@+id/text_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Đăng xuất"
                        android:textColor="#B7B7B7"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>
