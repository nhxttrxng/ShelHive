<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8DB"
    android:orientation="vertical">
    
    <!-- Header -->
    <FrameLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="left"
        android:background="#F5EAB5">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="53dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/text_edit_user_info"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="54.5dp"
            android:layout_marginBottom="-2.5dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Đổi mật khẩu"
            android:textColor="#FF755200"
            android:textSize="16dp"
            android:fontFamily="@font/nunito_bold" />
    </FrameLayout>

    <!-- Form nhập mật khẩu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp">
        
        <!-- Mật khẩu hiện tại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_password"
                android:tint="#A88430" />
            
            <EditText
                android:id="@+id/edt_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="Mật khẩu hiện tại"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#755200"
                android:fontFamily="@font/nunito" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A88430"
            android:layout_marginBottom="24dp" />
        
        <!-- Mật khẩu mới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:tint="#A88430" />
            
            <EditText
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#755200"
                android:fontFamily="@font/nunito_bold" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A88430"
            android:layout_marginBottom="24dp" />
        
        <!-- Xác nhận mật khẩu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:tint="#A88430" />
            
            <EditText
                android:id="@+id/edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:hint="Xác nhận mật khẩu"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="#755200"
                android:fontFamily="@font/nunito" />
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A88430" />
    </LinearLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
        
    <LinearLayout
        android:id="@+id/container_frame9"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <!-- Nút hủy -->
        <FrameLayout
            android:id="@+id/btn_cancel"
            android:layout_width="106dp"
            android:layout_height="48dp">
            
            <!-- Bóng dưới nút -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_rect_shadow" />
            
            <!-- Nút chính -->
            <View
                android:layout_width="match_parent" 
                android:layout_height="46dp"
                android:background="@drawable/rounded_rect_button_huy" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Hủy"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                android:fontFamily="@font/nunito_bold" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />
        
        <!-- Nút lưu -->
        <FrameLayout
            android:id="@+id/btn_save_user"
            android:layout_width="106dp"
            android:layout_height="48dp">
            
            <!-- Bóng dưới nút -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_rect_shadow" />
            
            <!-- Nút chính -->
            <View
                android:layout_width="match_parent" 
                android:layout_height="46dp"
                android:background="@drawable/rounded_rect_button" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Lưu"
                android:textColor="#FF755200"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_bold" />
        </FrameLayout>
    </LinearLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <!-- Bottom Navigation -->
    <FrameLayout
        android:id="@+id/container_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <androidx.cardview.widget.CardView
            android:layout_width="321dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="56dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:background="@android:color/white">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <!-- Trang chủ -->
                <LinearLayout
                    android:id="@+id/nav_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/image_home"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_home"
                        app:tint="#B7B7B7" />
                    
                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Trang chủ"
                        android:textColor="#B7B7B7"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
                
                <!-- Tôi -->
                <LinearLayout
                    android:id="@+id/nav_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <View
                        android:layout_width="27dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#FFB300" />
                    
                    <ImageView
                        android:id="@+id/image_person_outline"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_person"
                        app:tint="#FFB300" />
                    
                    <TextView
                        android:id="@+id/text_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tôi"
                        android:textColor="#FFB300"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_bold" />
                </LinearLayout>
                
                <!-- Đăng xuất -->
                <LinearLayout
                    android:id="@+id/nav_logout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/image_logout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_logout"
                        app:tint="#B7B7B7" />
                    
                    <TextView
                        android:id="@+id/text_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Đăng xuất"
                        android:textColor="#B7B7B7"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>
