<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8DB">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FBE27A">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="53dp"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="42dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo mới hóa đơn"
                android:textColor="#755200"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_extra_bold" />

            <TextView
                android:id="@+id/tv_room_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng 1"
                android:textColor="#755200"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_regular" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@id/bottom_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- THÔNG TIN HÓA ĐƠN -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN HÓA ĐƠN"
                android:textColor="#755200"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:padding="12dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập hạn thanh toán mới"
                android:textColor="#755200"
                android:textSize="14sp"
                android:textStyle="italic"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginStart="24dp" />

            <!-- Tháng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tháng"
                android:textColor="#755200"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/ed_month"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="12dp"
                android:text="01/2025"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#755200"
                android:background="@drawable/border_box"
                android:enabled="false" />

            <!-- Hạn thanh toán gốc -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạn thanh toán gốc"
                android:textColor="#755200"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/ed_original_due_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="12dp"
                android:text="07/02/2025"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="#755200"
                android:background="@drawable/border_box"
                android:enabled="false" />

            <!-- Hạn thanh toán mới -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn thanh toán mới"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#D80000"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp">
                
                <EditText
                    android:id="@+id/ed_new_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="12dp"
                    android:text="07/05/2025"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#755200"
                    android:background="@drawable/border_box"
                    android:enabled="true"
                    android:inputType="date" />
                    
                <ImageView
                    android:id="@+id/ic_calendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_calendar" />
            </RelativeLayout>

            <!-- DỊCH VỤ SỬ DỤNG -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DỊCH VỤ SỬ DỤNG"
                android:textColor="#755200"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <!-- Tiền điện -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp">

                <CheckBox
                    android:id="@+id/cb_electricity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    style="@style/CustomCheckbox"
                    android:enabled="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền điện"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_bold" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.500 đ/kwh"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_regular" />
            </LinearLayout>
            
            <!-- Số điện mới và cũ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số cũ"
                        android:textColor="#755200"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_bold" />

                    <EditText
                        android:id="@+id/ed_electricity_old"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:paddingHorizontal="12dp"
                        android:text="923"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="#755200"
                        android:background="@drawable/border_box"
                        android:enabled="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số mới"
                        android:textColor="#755200"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_bold" />

                    <EditText
                        android:id="@+id/ed_electricity_new"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:paddingHorizontal="12dp"
                        android:text="963"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="#755200"
                        android:background="@drawable/border_box"
                        android:enabled="false" />
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Thành tiền:"
                        android:textColor="#755200"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_electricity_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="140.000 đ"
                        android:textColor="#755200"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tiền nước -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp">

                <CheckBox
                    android:id="@+id/cb_water"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    style="@style/CustomCheckbox"
                    android:enabled="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền nước"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_bold" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.000 đ/m³"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_regular" />
            </LinearLayout>
            
            <!-- Số nước mới và cũ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số cũ"
                        android:textColor="#755200"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_bold" />

                    <EditText
                        android:id="@+id/ed_water_old"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:paddingHorizontal="12dp"
                        android:text="150"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="#755200"
                        android:background="@drawable/border_box"
                        android:enabled="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số mới"
                        android:textColor="#755200"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_bold" />

                    <EditText
                        android:id="@+id/ed_water_new"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:paddingHorizontal="12dp"
                        android:text="180"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="#755200"
                        android:background="@drawable/border_box"
                        android:enabled="false" />
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Thành tiền:"
                        android:textColor="#755200"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_water_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="210.000 đ"
                        android:textColor="#755200"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tiền phòng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp">

                <CheckBox
                    android:id="@+id/cb_room"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    style="@style/CustomCheckbox"
                    android:enabled="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền phòng"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_bold" />
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.100.000 đ/tháng"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_regular" />
            </LinearLayout>
            
            <!-- Lãi suất gia hạn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp">

                <CheckBox
                    android:id="@+id/cb_interest"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    style="@style/CustomCheckbox"
                    android:enabled="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lãi suất gia hạn (%/ngày)"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_bold" />

                <EditText
                    android:id="@+id/ed_interest_rate"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:paddingHorizontal="12dp"
                    android:text="0.5"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#755200"
                    android:background="@drawable/border_box"
                    android:gravity="center"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <!-- Tiền lãi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp">

                <CheckBox
                    android:id="@+id/cb_late_fee"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:checked="true"
                    style="@style/CustomCheckbox"
                    android:enabled="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền lãi:"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_bold" />
                <TextView
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="89 ngày"
                    android:textColor="#755200"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Thành tiền:"
                        android:textColor="#755200"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_late_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="645.250 đồng"
                        android:textColor="#D70000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- TỔNG TIỀN -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TỔNG TIỀN"
                android:textColor="#755200"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <!-- Tiền dịch vụ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiền dịch vụ"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:id="@+id/tv_service_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.450.000 đồng"
                    android:textColor="#FF8C00"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold" />
            </LinearLayout>

            <!-- Tiền lãi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiền lãi"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:id="@+id/tv_interest_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72.500 đồng"
                    android:textColor="#D70000"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold" />
            </LinearLayout>

            <!-- Tổng tiền -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng tiền"
                    android:textColor="#755200"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.095.250 đồng"
                    android:textColor="#D70000"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold" />
            </LinearLayout>

            <!-- Ghi chú -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textColor="#755200"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:padding="12dp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/ed_note"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="12dp"
                android:gravity="top|start"
                android:paddingTop="8dp"
                android:hint="Nhập ghi chú..."
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:textColor="#755200"
                android:background="@drawable/border_box" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom buttons -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Hủy"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_bold"
            android:backgroundTint="#FF7E7E"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Lưu"
            android:textColor="#755200"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_bold"
            android:backgroundTint="#FBE27A" />
    </LinearLayout>

</RelativeLayout>