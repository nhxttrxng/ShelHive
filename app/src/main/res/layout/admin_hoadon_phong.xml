<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8DB">

    <!-- Header với nút quay lại và tiêu đề -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#F9E4A4">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoá đơn"
                android:textColor="#755200"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:id="@+id/tv_motel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhà trọ Trường Phát 1"
                android:textColor="#755200"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_regular" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Thanh tìm kiếm -->
    <RelativeLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/search_border"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:hint="Tìm kiếm"
            android:fontFamily="@font/nunito_regular"
            android:textColorHint="#D1C19C"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </RelativeLayout>

    <!-- Danh sách phòng -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Phòng 1 -->
            <RelativeLayout
                android:id="@+id/room_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_room_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_room_red" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phòng 1"
                                android:textColor="#D70000"
                                android:textSize="16sp"
                                android:fontFamily="@font/nunito_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa thanh toán: 2 hoá đơn"
                                android:textColor="#D70000"
                                android:textSize="14sp"
                                android:fontFamily="@font/nunito_regular" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngô Nhựt Trường"
                            android:textColor="#D70000"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_regular" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trễ hạn"
                                android:textColor="#D70000"
                                android:textSize="14sp"
                                android:fontFamily="@font/nunito_regular" />

                            <!-- Số 1 nằm kế bên chữ "Trễ hạn" -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/badge_circle_red"
                                android:fontFamily="@font/nunito_bold" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#755200"
                android:alpha="0.3" />

            <!-- Phòng 2 -->
            <RelativeLayout
                android:id="@+id/room_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_room_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_room_brown" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phòng 2"
                            android:textColor="#755200"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chưa thanh toán: 1 hoá đơn"
                            android:textColor="#755200"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_regular" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trần Danh Vinh"
                        android:textColor="#755200"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa đóng"
                        android:textColor="#755200"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_regular" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#755200"
                android:alpha="0.3" />

            <!-- Phòng 3 -->
            <RelativeLayout
                android:id="@+id/room_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_room_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_room_green" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phòng 3"
                            android:textColor="#2E8B57"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chưa thanh toán: 0 hoá đơn"
                            android:textColor="#2E8B57"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_regular" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trần Thảo Quyên"
                        android:textColor="#2E8B57"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã đóng"
                        android:textColor="#2E8B57"
                        android:textSize="14sp"
                        android:fontFamily="@font/nunito_regular" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#755200"
                android:alpha="0.3" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
