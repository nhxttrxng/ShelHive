<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8DB"
    android:gravity="left|top"
    android:orientation="vertical">
    
    <!-- Header -->
    <FrameLayout
        android:id="@+id/container_user_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="left"
        android:background="#F5EAB5">
        
        <ImageView
            android:id="@+id/btn_user_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="53dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />
        
        <TextView
            android:id="@+id/txt_user_info"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="54.5dp"
            android:layout_marginBottom="-2.5dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Thông tin cá nhân"
            android:textColor="#FF755200"
            android:textSize="16dp"
            android:fontFamily="@font/nunito_bold" />
    </FrameLayout>
    
    <!-- Avatar -->
    <FrameLayout
        android:id="@+id/container_user_avatar"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="23dp">
        
        <com.nhom5.shelhive.customviews.HexagonImageView
            android:id="@+id/img_user_avatar"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_gravity="top|center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar" />
        
        <FrameLayout
            android:id="@+id/container_user_edit_avatar"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="193dp"
            android:layout_marginTop="66dp"
            android:layout_gravity="top|left"
            android:background="@drawable/circle_yellow">
            
            <ImageView
                android:id="@+id/img_user_edit"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit" />
        </FrameLayout>
    </FrameLayout>
    
    <!-- Thông tin người dùng -->
    <LinearLayout
        android:id="@+id/container_user_details"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="23dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/container_user_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Họ tên -->
            <FrameLayout
                android:id="@+id/container_user_name"
                android:layout_width="340dp"
                android:layout_height="25.35dp">
                
                <TextView
                    android:id="@+id/txt_user_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Ngô Nhựt Trường"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold" />
                
                <View
                    android:id="@+id/line_user_name"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/img_user_person"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_person"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- Ngày sinh -->
            <FrameLayout
                android:id="@+id/container_user_dob"
                android:layout_width="340dp"
                android:layout_height="24.77dp"
                android:layout_marginTop="30dp">
                
                <TextView
                    android:id="@+id/txt_user_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="1.42dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="14/06/2004"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold" />
                
                <View
                    android:id="@+id/line_user_dob"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23.42dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/img_user_calendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- Tỉnh/Thành phố -->
            <FrameLayout
                android:id="@+id/container_user_city"
                android:layout_width="340dp"
                android:layout_height="24.12dp"
                android:layout_marginTop="30dp">
                
                <TextView
                    android:id="@+id/txt_user_city"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="0.76dp"
                    android:layout_gravity="top|left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Thủ Đức"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold" />
                
                <View
                    android:id="@+id/line_user_city"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23.42dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/img_user_city"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_location"
                    app:tint="@color/brown" />
            </FrameLayout>

            <!-- Quận/Huyện -->
            <FrameLayout
                android:id="@+id/container_user_province"
                android:layout_width="340dp"
                android:layout_height="24.77dp"
                android:layout_marginTop="30dp">
                
                <TextView
                    android:id="@+id/txt_user_province"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="1.42dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="TP. Hồ Chí Minh"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold" />
                
                <View
                    android:id="@+id/line_user_province"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23.42dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/img_user_province"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_location"
                    app:tint="@color/brown" />
            </FrameLayout>

            <!-- Căn cước công dân -->
            <FrameLayout
                android:id="@+id/container_user_idnumber"
                android:layout_width="340dp"
                android:layout_height="24.77dp"
                android:layout_marginTop="30dp">
                
                <TextView
                    android:id="@+id/txt_user_idnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="1.42dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="079204005123"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold" />
                
                <View
                    android:id="@+id/line_user_idnumber"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23.42dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/img_user_idnumber"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_card"
                    app:tint="@color/brown" />
            </FrameLayout>

            <!-- Email -->
            <FrameLayout
                android:id="@+id/container_user_email"
                android:layout_width="340dp"
                android:layout_height="24.77dp"
                android:layout_marginTop="30dp">
                
                <TextView
                    android:id="@+id/txt_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="1.42dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="nhuttruong@gmail.com"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold" />
                
                <View
                    android:id="@+id/line_user_email"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23.42dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/img_user_email"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_email"
                    app:tint="@color/brown" />
            </FrameLayout>
            
            <!-- Số điện thoại -->
            <FrameLayout
                android:id="@+id/container_user_phone"
                android:layout_width="340dp"
                android:layout_height="24.77dp"
                android:layout_marginTop="30dp">
                
                <TextView
                    android:id="@+id/txt_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="1.42dp"
                    android:layout_marginBottom="1.35dp"
                    android:layout_gravity="left"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="0948622852"
                    android:textColor="#FF9B895D"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_semibold" />
                
                <View
                    android:id="@+id/line_user_phone"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="23.42dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="left"
                    android:background="@color/brown" />
                
                <ImageView
                    android:id="@+id/img_user_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|left"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/brown" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
        
    <LinearLayout
        android:id="@+id/container_user_buttons"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <!-- Nút đổi mật khẩu -->
        <FrameLayout
            android:id="@+id/btn_user_changepass"
            android:layout_width="106dp"
            android:layout_height="48dp">
            
            <!-- Bóng dưới nút -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_rect_shadow" />
            
            <!-- Nút chính -->
            <View
                android:layout_width="match_parent" 
                android:layout_height="46dp"
                android:background="@drawable/rounded_rect_button" />
            
            <TextView
                android:id="@+id/txt_user_changepass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Đổi\nmật khẩu"
                android:textColor="#FF755200"
                android:textSize="13dp"
                android:fontFamily="@font/nunito_bold" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />
        
        <!-- Nút sửa -->
        <FrameLayout
            android:id="@+id/btn_user_edit"
            android:layout_width="106dp"
            android:layout_height="48dp">
            
            <!-- Bóng dưới nút -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_rect_shadow" />
            
            <!-- Nút chính -->
            <View
                android:layout_width="match_parent" 
                android:layout_height="46dp"
                android:background="@drawable/rounded_rect_button" />
            
            <TextView
                android:id="@+id/txt_user_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sửa"
                android:textColor="#FF755200"
                android:textSize="16dp"
                android:fontFamily="@font/nunito_bold" />
        </FrameLayout>
    </LinearLayout>
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <!-- Bottom Navigation -->
    <FrameLayout
        android:id="@+id/container_user_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        
        <androidx.cardview.widget.CardView
            android:layout_width="321dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:background="@android:color/white">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                
                <!-- Trang chủ -->
                <LinearLayout
                    android:id="@+id/nav_user_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/img_user_home"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_home"
                        app:tint="#B7B7B7" />
                    
                    <TextView
                        android:id="@+id/txt_user_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Trang chủ"
                        android:textColor="#B7B7B7"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
                
                <!-- Tôi -->
                <LinearLayout
                    android:id="@+id/nav_user_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <View
                        android:layout_width="27dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#FFB300" />
                    
                    <ImageView
                        android:id="@+id/img_user_profile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_person"
                        app:tint="#FFB300" />
                    
                    <TextView
                        android:id="@+id/txt_user_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tôi"
                        android:textColor="#FFB300"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_bold" />
                </LinearLayout>
                
                <!-- Đăng xuất -->
                <LinearLayout
                    android:id="@+id/nav_user_logout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <ImageView
                        android:id="@+id/img_user_logout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_logout"
                        app:tint="#B7B7B7" />
                    
                    <TextView
                        android:id="@+id/txt_user_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Đăng xuất"
                        android:textColor="#B7B7B7"
                        android:textSize="12dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</LinearLayout>
