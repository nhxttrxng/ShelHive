<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/room_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_room"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_room_brown" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/so_phong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkbrown"
                    android:text="Phòng 1"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold" />

                <TextView
                    android:id="@+id/ngay_ket_thuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkbrown"
                    android:text="Ngày hết hạn:"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_regular" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="end">

            <TextView
                android:id="@+id/trang_thai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người thuê"
                android:textColor="@color/darkbrown"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_regular" />

            <LinearLayout
                android:id="@+id/status_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/gia_thue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkbrown"
                    android:text="Giá thuê"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_regular" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#755200"
        android:alpha="0.3"
        android:layout_below="@id/room_content"
        android:layout_marginTop="8dp"/>

</RelativeLayout>