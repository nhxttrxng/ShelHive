    <item android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="22.5dp" />
            <solid android:color="#40FF6A6A" />
        </shape>
    </item>
    
    <!-- Main Button -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="22.5dp" />
